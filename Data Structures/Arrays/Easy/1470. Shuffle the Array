1470. Shuffle the Array
***************************************

class Solution {
    public int[] shuffle(int[] nums, int n) {
        int[] arr = new int[nums.length];
        for(int i=0, j=n, k=0; k<arr.length; i++, j++){
             arr[k++] = nums[i];
             arr[k++] = nums[j];
        }
        return arr;
    }
}
